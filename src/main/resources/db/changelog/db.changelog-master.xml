<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001" author="Aleksandr Barmin">
        <createTable tableName="ARTICLE_SOURCES">
            <column name="SOURCE_ID" autoIncrement="true" type="int">
                <constraints primaryKey="true" primaryKeyName="article_sources_pk" />
            </column>
            <column name="SOURCE_NAME" type="CHARACTER">
                <constraints unique="true" uniqueConstraintName="article_source_name_unique" />
            </column>
            <column name="SOURCE_URL" type="CHARACTER">
                <constraints unique="true" uniqueConstraintName="article_source_url_unique" />
            </column>
            <column name="SOURCE_LAST_UPDATED" type="DATE" />
            <column name="CREATED_AT" type="DATE" />
            <column name="UPDATED_AT" type="DATE" />
        </createTable>
    </changeSet>
</databaseChangeLog>